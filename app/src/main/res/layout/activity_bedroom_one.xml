<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bedroomone"
    tools:context=".LivingRoom">






    <android.support.v7.widget.CardView
        android:id="@+id/welcome"

        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"

        android:clickable="true"

        app:cardCornerRadius="9dp"
        android:alpha="@android:integer/config_longAnimTime"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="168dp">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Bedroom-1"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_margin="9dp"
                android:typeface="monospace"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/textViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Room Temp:"
                android:textStyle="bold"
                android:textColor="#aaa"
                android:layout_margin="10dp"
                android:typeface="monospace"
                android:layout_below="@id/textView29"
                android:textSize="17dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:id="@+id/container"
        android:layout_below="@id/welcome"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"

        >

        <android.support.v7.widget.CardView
            android:id="@+id/lamp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#B0BEC5"
            >


            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_margin="9dp"
                android:layout_height="wrap_content"
                android:text="on"
                android:textColor="#222"
                android:textOn="on"
                android:textStyle="bold"
                android:textOff="off"
                android:background="#0b000000"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/livingroompic"

                    />

                <TextView
                    android:id="@+id/textView293"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Main light"
                    android:textStyle="bold"

                    android:textColor="#795548"
                    android:layout_margin="9dp"
                    android:typeface="sans"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView4"
                    />

            </RelativeLayout>




        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/router"
            android:layout_width="180dp"
            android:layout_margin="10dp"
            android:layout_height="180dp"
            android:layout_toRightOf="@id/lamp"
            app:cardBackgroundColor="#B0BEC5"
            app:cardCornerRadius="9dp"

            >

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_margin="9dp"
                android:layout_height="wrap_content"
                android:text="on"
                android:textColor="#222"
                android:textOn="on"
                android:textStyle="bold"
                android:textOff="off"
                android:background="#0b000000"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/router2"

                    />

                <TextView
                    android:id="@+id/textView2934"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Router"
                    android:textStyle="bold"

                    android:textColor="#795548"
                    android:layout_margin="9dp"
                    android:typeface="sans"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView6"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/fan"
            android:layout_below="@id/lamp"
            android:layout_width="180dp"
            android:layout_margin="10dp"
            android:layout_height="180dp"
            app:cardBackgroundColor="#B0BEC5"
            app:cardCornerRadius="9dp"

            >

            <Switch
                android:id="@+id/switch3"
                android:layout_width="wrap_content"
                android:layout_margin="9dp"
                android:layout_height="wrap_content"
                android:text="open"
                android:textColor="#222"
                android:textOn="close"
                android:textStyle="bold"
                android:textOff="close"
                android:background="#0b000000"

                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/imageView64"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/fan"

                    />

                <TextView
                    android:id="@+id/textView29342"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="fan"
                    android:textStyle="bold"

                    android:textColor="#795548"
                    android:layout_margin="9dp"
                    android:typeface="sans"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView64"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/setthermostat"

            android:layout_width="200dp"
            android:layout_height="30dp"

            android:clickable="true"

            app:cardCornerRadius="5dp"
            android:alpha="@android:integer/config_longAnimTime"
            app:cardBackgroundColor="#454"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/fan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="168dp"

                >

                <TextView
                    android:id="@+id/thermostattext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="    Thermostat   "

                    android:textColor="#fff"
                    android:layout_margin="2dp"
                    android:typeface="monospace"
                    android:textSize="20dp" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/thermostat"
            android:layout_below="@id/setthermostat"
            android:layout_width="match_parent"
            android:layout_margin="1dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="#454"
            app:cardCornerRadius="9dp"


            >

            <SeekBar
                android:id="@+id/seekBar2"

                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>


        <Button
            android:layout_width="90dp"
            android:layout_below="@id/thermostat"
            android:layout_height="40dp"
            android:background="#565"

            android:textStyle="bold"

            android:layout_centerHorizontal="true"
            android:text="Set"
            />


    </RelativeLayout>

</RelativeLayout>